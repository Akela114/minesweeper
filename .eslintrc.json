{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "jest"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-duplicate-imports": "error"
  },
  "ignorePatterns": ["*.config.js"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
